@model PagedList.IPagedList<Models.FrameWork.USER>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header{
    Danh Sách USER
}
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh Sách Dự Án
            </div>

            <!-- /.panel-heading -->
            <div class="panel-body">
                <a href="~/Admin/Property/Create">Create</a>
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Email</th>
                            <th>FullName</th>
                            <th>Phone</th>
                            <th>Address</th>
                            <th>Role</th>
                            <th>Status</th>
                           


                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {


                            <tr class="odd gradeX">
                                <td>
                                    @Html.ActionLink("SET ROLE", "Edit", new { id = item.ID })
                                    @*
                                    Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                    Html.ActionLink("Details", "Details", new { id = item.ID }) |
                                    <a href="~/Admin/Property/ViewListProperty/@item.ID">ViewListProperty</a>|
                                    Html.ActionLink("ViewListProperty", "ViewListProperty", new { id = item.ID }) |
                                    Html.ActionLink("Delete", "Delete", new { id = item.ID })
                                    Ajax.ActionLink("Delete", "Delete", new { id = item.ID }, new AjaxOptions
                               {
                                   Confirm = "Ban co muon xoa dong nay ?",
                                   OnComplete = "$('#row_" + item.ID + "'.remove())",
                                   HttpMethod = "Delete",
                               })
                                    *@
                                </td>
                                <td>@item.Email</td>

                                <td>@item.FullName</td>
                                <td>@item.Phone</td>
                                <td>@item.Address</td>
                                <td>@item.Role</td>
                                <td>@item.Status</td>
                               
                            </tr>
                        }

                    </tbody>
                </table>
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
