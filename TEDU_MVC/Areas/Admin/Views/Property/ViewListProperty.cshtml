@model  IEnumerable<Models.FrameWork.PROPERTy>

@{
    ViewBag.Title = "ViewListProperty";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header{
   ViewListPropertys
}
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh Sách Dự Án
            </div>

            <!-- /.panel-heading -->
            <div class="panel-body">
                <a href="~/Admin/Property/Create">Create</a>
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th></th>
                            <th>PropertyName</th>
                            <th>Avatar</th>
                            <th>Images</th>
                            <th>PropertyType</th>
                            @*<th>Content</th>*@
                            <th>Street</th>
                            @*<th>Ward</th>*@
                            <th>District</th>
                            <th>Price</th>
                            @*<th>UnitPrice</th>*@
                            <th>Area</th>
                            @*<th>BedRoom</th>
                                <th>BathRoom</th>
                                <th>PackingPlace</th>*@
                            <th>User</th>
                            <th>Created</th>
                            <th>Create_post</th>
                            <th>Status</th>
                            @*<th>Note</th>*@
                            <th>Updated_at</th>
                            @*<th>Sale</th>*@


                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {


                            <tr class="odd gradeX">
                                <td>

                                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                                    @*@Html.ActionLink("Delete", "Delete", new { id = item.ID })*@
                                    @Ajax.ActionLink("Delete", "Delete", new { id = item.ID }, new AjaxOptions
                               {
                                   Confirm = "Ban co muon xoa dong nay ?",
                                   OnComplete = "$('#row_" + item.ID + "'.remove())",
                                   HttpMethod = "Delete",
                               })
                                </td>
                                <td>@item.PropertyName</td>

                                <td><img src="/Avatar/@item.Avatar" width="100px"></td>
                                <td><img src="/Images/@item.Images" width="100px"></td>

                                <td>@item.PROPERTY_TYPE.CodeType</td>
                                <td>@item.STREET.StreetName</td>
                                @*<td>@item.WARD.WardName</td>*@
                                <td>@item.DISTRICT_Table.DistrictName</td>
                                <td>@item.Price</td>
                                @*<td>@item.UnitPrice</td>*@
                                <td>@item.Area</td>
                                @*<td>@item.BedRoom</td>
                                    <td>@item.BathRoom</td>
                                    <td>@item.PackingPlace</td>*@
                                <td>@item.USER.FullName</td>
                                <td>@item.Created_at</td>
                                <td>@item.Create_post</td>
                                <td>@item.PROJECT_STATUS.Status_Name</td>
                                @*<td>@item.Note</td>*@
                                <td>@item.Updated_at</td>
                                @*<td>@item.Sale_ID</td>*@
                            </tr>
                        }

                    </tbody>
                </table>
          
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

